@page "/parentComponent"

<h3 class="text-danger">Parent/Child Component</h3>
<CascadingValue Value="@messageForGrandChild" Name="Message">
    <CascadingValue Value="@luckyNumber" Name="LuckyNumber">
        <ChildComponent @ref="childComp"
                        OnBtnClick="ShowMessage" 
                        Title="This is title from parent component">
            <ChildContent>ChildFragment</ChildContent>
        </ChildComponent>
    </CascadingValue>
</CascadingValue>

<AnotherChildComponent placeholder="default"></AnotherChildComponent>
<br />

<p>
    <b>@message</b>
</p>

<div class="row">
    <button class="btn btn-success" @onclick="(() => childComp.ShowSwalSucces())">Button</button>
</div>

@code {
    private ChildComponent childComp;

    string messageForGrandChild = "Message from grand parent!";
    int luckyNumber = 7;

    string message = "";

    protected void ShowMessage(MouseEventArgs e)
    {
        message = "Text from parent";
    }
}
